<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="horizontal">

    <!--Container for scores (each team)-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:gravity="top"
        android:orientation="vertical">

        <!--Container for Team A-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/football_team_a_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Team A"
                android:textColor="#616161" />

            <TextView
                android:id="@+id/football_team_a_possession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="In Possession"
                android:textColor="#616161" />

            <TextView
                android:id="@+id/football_team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="56sp" />
        </LinearLayout>

        <!--Container for Team B-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/football_team_b_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Team B"
                android:textColor="#616161" />

            <TextView
                android:id="@+id/football_team_b_possession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="In Possession"
                android:textColor="#616161" />

            <TextView
                android:id="@+id/football_team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="56sp" />
            
        </LinearLayout>

    </LinearLayout>

    <!--Container for possession button, score buttons-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonChangePossession"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@color/colorPrimary_football"
            android:onClick="changePossession"
            android:text="Change Possession"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonTouchdown"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@color/colorPrimary_football"
            android:onClick="touchdown"
            android:text="Touchdown"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonExtraPoint"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@color/colorPrimary_football"
            android:onClick="extraPoint"
            android:text="Extra Point"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonTwoPtConversion"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@color/colorPrimary_football"
            android:onClick="twoPointConversion"
            android:text="2-Pt. Conversion"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonFieldGoal"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@color/colorPrimary_football"
            android:onClick="fieldGoal"
            android:text="Field Goal"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonSafety"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@color/colorPrimary_football"
            android:onClick="safety"
            android:text="Safety"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
